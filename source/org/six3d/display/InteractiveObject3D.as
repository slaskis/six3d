package org.six3d.display {	import flash.display.Sprite;	import flash.events.MouseEvent;		import org.six3d.display.DisplayObject3D;		/**	 * Adds mouse interactivity to sprites	 * @author Robert Sk√∂ld, bob@six3d.org	 */	public class InteractiveObject3D extends DisplayObject3D {		public function InteractiveObject3D( name : String = null ) {			super(name);			mouseEnabled = true;		}		public function set mouseEnabled( value : Boolean ) : void {			sprite.mouseEnabled = value;			// TODO There must be a better way			if( mouseEnabled ) { 				sprite.addEventListener( MouseEvent.CLICK , onMouseEvent , false , 0 , true );				sprite.addEventListener( MouseEvent.ROLL_OVER, onMouseEvent , false , 0 , true );				sprite.addEventListener( MouseEvent.ROLL_OUT, onMouseEvent , false , 0 , true );				sprite.addEventListener( MouseEvent.MOUSE_DOWN, onMouseEvent , false , 0 , true );				sprite.addEventListener( MouseEvent.MOUSE_UP, onMouseEvent , false , 0 , true );				sprite.addEventListener( MouseEvent.MOUSE_MOVE, onMouseEvent , false , 0 , true );				sprite.addEventListener( MouseEvent.MOUSE_WHEEL, onMouseEvent , false , 0 , true );				sprite.addEventListener( MouseEvent.MOUSE_OVER, onMouseEvent , false , 0 , true );				sprite.addEventListener( MouseEvent.MOUSE_OUT, onMouseEvent , false , 0 , true );			} else {				sprite.removeEventListener( MouseEvent.CLICK , onMouseEvent );				sprite.removeEventListener( MouseEvent.ROLL_OVER, onMouseEvent );				sprite.removeEventListener( MouseEvent.ROLL_OUT, onMouseEvent );				sprite.removeEventListener( MouseEvent.MOUSE_DOWN, onMouseEvent );				sprite.removeEventListener( MouseEvent.MOUSE_UP, onMouseEvent );				sprite.removeEventListener( MouseEvent.MOUSE_MOVE, onMouseEvent );				sprite.removeEventListener( MouseEvent.MOUSE_WHEEL, onMouseEvent );				sprite.removeEventListener( MouseEvent.MOUSE_OVER, onMouseEvent );				sprite.removeEventListener( MouseEvent.MOUSE_OUT, onMouseEvent );			}		}				private function onMouseEvent(event : MouseEvent) : void {			dispatchEvent( event );		}		public function get mouseEnabled() : Boolean {			return sprite.mouseEnabled;		}
		public function set buttonMode( value : Boolean ) : void {			sprite.buttonMode = value;		}
		public function get buttonMode() : Boolean {			return sprite.buttonMode;		}		public function get useHandCursor() : Boolean {			return sprite.useHandCursor;		}		public function set useHandCursor(value : Boolean) : void {			sprite.useHandCursor = value;		}	}}