package org.six3d.examples.countdown {	import org.six3d.display.DisplayObject3D;	import flash.display.DisplayObject;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.TimerEvent;	import flash.utils.Timer;		import org.six3d.display.Scene3D;	import org.six3d.display.Sprite3D;	import org.six3d.display.Text3D;	import org.six3d.typography.HelveticaBold;	import org.six3d.utils.Reflect;		/**	 * @private	 * @author Robert Sk√∂ld, bob@six3d.org	 */	public class Countdown extends Sprite {		private var _scene : Scene3D;		private var _counter : DisplayObject3D;		private var _text1 : Text3D;		private var _reflection : Reflect;		public function Countdown() {			stage.scaleMode = "noScale";						setupScene();			setupCountdown();						addEventListener( Event.ENTER_FRAME , rotate);		}		private function setupScene() : void {			var container : Sprite = new Sprite();			addChild(container);			_scene = new Scene3D(container);		}		private function setupCountdown() : void {			_counter = new DisplayObject3D();			_counter.x = 250;			_counter.y = 200;			_scene.addChild( _counter );						_text1 = new Text3D();			_text1.typography = new HelveticaBold();			_text1.size = 50;			_text1.color = 0xD7006C;			_text1.x = -100;			_text1.y = -50;			_text1.multiline = false;			_counter.addChild(_text1);						var timer : Timer = new Timer(1000);			timer.addEventListener( TimerEvent.TIMER , update );			timer.start();						update();		}		private function update( event : Event = null ) : void {			var end : Date = new Date(2007, 11, 9, 12);			var now : Date = new Date();				var ms : int = end.time - now.time;			var s : int = Math.floor(ms / 1000); // 1000 milliseconds make a second			var m : int = Math.floor(s / 60); // 60 seconds make a minute			var h : int = Math.floor(m / 60); // 60 minutes make a hour			var d : int = Math.floor(h / 24); // 24 hours make a second			var ms_s : String = String(ms % 1000);			var s_s : String = String(s % 60);			var m_s : String = String(m % 60);			var h_s : String = String(h % 24);			var d_s : String = String(d);				if (s_s.length < 2) s_s = "0" + s_s;			if (m_s.length < 2) m_s = "0" + m_s;			if (h_s.length < 2) h_s = "0" + h_s;			while (d_s.length < 3) d_s = "0" + d_s;						_text1.text = d_s + " days &\n" + h_s + ":" + m_s + ":" + s_s + " left!";		}						private function rotate(event : Event) : void {			_counter.rotationY = ( mouseX - 225 ) / 10;			_counter.rotationX = -( mouseY - 200 ) / 10;		}	}}