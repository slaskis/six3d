package org.six3d.examples.games.shufflepuck {	import flash.display.Sprite;	import flash.events.Event;		import org.cove.ape.APEngine;	import org.cove.ape.VectorForce;	import org.six3d.display.DisplayObject3D;	import org.six3d.display.Scene3D;	import org.six3d.display.Sprite3D;	import org.six3d.utils.FPSUtil;		/**	 * @private	 * @author Robert Sk√∂ld, bob@six3d.org	 */	public class ShufflePuck extends Sprite {		private var _scene : Scene3D;		private var _root : DisplayObject3D;		private var _puck : Puck;		private var _handle : Handle;		public function ShufflePuck() {			stage.align = "TL";			stage.scaleMode = "noScale";						setupScene();			setupPhysics();			setupObjects();						new FPSUtil( this );		}		private function setupScene() : void {			var container3d : Sprite = new Sprite();			container3d.x = 250;			container3d.y = 200;			addChild( container3d );			_scene = new Scene3D( container3d );			_root = _scene.addChild( new DisplayObject3D( "root" ) );		}				private function setupPhysics() : void {			var container : Sprite = new Sprite();			APEngine.init( 1/4 );			APEngine.container = container;			addEventListener( Event.ENTER_FRAME, run);		}						private function setupObjects() : void {			var board : Sprite3D = new Sprite3D( "board" );			_root.addChild( board );			_puck = new Puck( board );			_puck.addForce( new VectorForce( true , 0 , -1 ) );			_handle = new Handle( board );		}				private function run(event : Event) : void {			trace( "RUN!" );			APEngine.step();			APEngine.paint();		}	}}