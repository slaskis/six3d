package org.six3d.geom {	/**	 * @author Robert Skï¿½ld, bob@six3d.org	 */	public class Angle {				public static const TO_RADIANS : Number = Math.PI / 180;		public static const TO_DEGREES : Number = 180 / Math.PI;		static public function formatRotation(angle : Number) : Number {			var angle2 : Number = angle % 360;			if (angle2 < -180) return angle2 + 360;			if (angle2 > 180) return angle2 - 360;			return angle2;		}		static public function degreesToRadians(angle : Number) : Number {			return angle * TO_RADIANS;		}				static public function radiansToDegrees(angle : Number) : Number {			return angle * TO_DEGREES;		}	}}