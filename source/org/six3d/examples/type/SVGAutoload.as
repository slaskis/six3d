package org.six3d.examples.type {	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.text.TextField;		import org.six3d.display.DisplayObject3D;	import org.six3d.display.Scene3D;	import org.six3d.display.Text3D;	import org.six3d.typography.CompressedType;	import org.six3d.utils.FPSUtil;		/**	 * @private	 * @author Robert Sk√∂ld, bob@six3d.org	 */	public class SVGAutoload extends Sprite {				public static const FONT_ARIAL : String = "fonts/arial/arial.far";		public static const FONT_GEORGIA : String = "fonts/georgia/georgia.far";		public static const FONT_COMIC_SANS : String = "fonts/comic sans/comic-sans.far";		public static const FONT_ANDALE_MONO : String = "fonts/andale mono/andale-mono.far";		private var _scene : Scene3D;		private var _txt : Text3D;		private var _root : DisplayObject3D;		public function SVGAutoload() {			stage.align = "TL";			stage.scaleMode = "noScale";						setupScene();			setupText();			setupButtons();						new FPSUtil( this);		}		private function setupScene() : void {			var container : Sprite = new Sprite();			container.x = 250;			container.y = 200;			addChild( container );			_scene = new Scene3D( container );			_root = _scene.addChild( new DisplayObject3D( "root" ) );		}				private function setupText() : void {			_txt = new Text3D();			_txt.typography = new CompressedType( FONT_ANDALE_MONO );			_txt.size = 5;			_txt.text = "HELLO\nWORLD!";			_txt.x = -200;			_root.addChild( _txt );			addEventListener( Event.ENTER_FRAME , rotate);		}				private function setupButtons() : void {			var y : int = 0;			var btn : Sprite;			btn = drawButton( "Arial (16kb)", FONT_ARIAL );			btn.y = y = y + 20;			btn = drawButton( "Georgia (20kb)", FONT_GEORGIA );			btn.y = y = y + 20;			btn = drawButton( "Andale Mono (8kb)", FONT_ANDALE_MONO );			btn.y = y = y + 20;			btn = drawButton( "Comic Sans (20kb)", FONT_COMIC_SANS );			btn.y = y = y + 20;		}		private function drawButton( label : String , name : String ) : Sprite {			var btn : Sprite = new Sprite();			btn.name = name;			var lbl : TextField = new TextField();			lbl.text = label;			lbl.mouseEnabled = false;			btn.addChild( lbl );			btn.addEventListener( MouseEvent.CLICK , swapFont );			btn.buttonMode = true;			addChild( btn );			return btn;		}				private function swapFont( event : MouseEvent ) : void {			_txt.typography = new CompressedType( Sprite( event.currentTarget ).name );		}				private function rotate(event : Event) : void {			_root.rotationY = ( mouseX - 225 ) / 30;			_root.rotationX = -( mouseY - 200 ) / 30;		}	}}