package org.six3d.utils {	public class StringUtil {		public static function shorten( string : String , length : int ) : String {			if( string.length <= length ) return string;			return trim( string.substr(0, length) ) + "...";		}		public static function trim( original : String ) : String {			return original.replace( /^[\s]+|[\s]+$/mg, "" );		}		public static function isWhitespace( ch : String ) : Boolean {			return /\s/.test(ch);		}						public static function singleWhitespace( str : String ) : String {			return str.replace( /\s+/g , " " );		}	}}