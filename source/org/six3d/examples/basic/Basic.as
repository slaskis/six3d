package org.six3d.examples.basic {	import flash.display.Bitmap;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;		import org.six3d.display.Scene3D;	import org.six3d.display.Sprite3D;	import org.six3d.display.Text3D;	import org.six3d.primitives.RoundedRectangle3D;	import org.six3d.primitives.Star3D;	import org.six3d.typography.HelveticaBold;	import org.six3d.typography.HelveticaMedium;	import org.six3d.utils.FPSUtil;		/**	 * @private	 * @author Robert Sk√∂ld, bob@six3d.org	 */	public class Basic extends Sprite {		private var _scene : Scene3D;		private var _sign : RoundedRectangle3D;		private var _plane : RoundedRectangle3D;		public function Basic() {			stage.scaleMode = "noScale";						setupScene();			setupText();			setupSign();			setupPlane();									new FPSUtil( this );						addEventListener(Event.ENTER_FRAME, move);		}				private function setupScene() : void {			var container : Sprite = new Sprite();			container.x = 250;			container.y = 200;			addChild( container );			_scene = new Scene3D( container );		}				private function setupText() : void {			var hi : Text3D = new Text3D();			hi.typography = new HelveticaBold();			hi.size = 100;			hi.color = 0xff0000;			hi.x = -30;			hi.y = -30;			hi.text = "I am\nBob!";			_scene.addChild( hi );		}				[Embed(mimeType='image/png',source="../../../../../public/images/grid.png")]		public var image : Class;				private function setupSign() : void {			var img : Bitmap = new image() as Bitmap;									_sign = new RoundedRectangle3D( 300 , 300 , 20 , -150 , -150 );//			_sign.bitmap = img.bitmapData;			_sign.alpha = 1;			_scene.addChild( _sign );						var star : Star3D = new Star3D( 60 , 50 , 20 , 0 );			star.color = 0xD7006C;			star.x = 120;			star.y = 0;			_sign.addChild( star );						var star2 : Star3D = new Star3D( 60 , 50 , 20 , 0 );			star2.color = 0x00FFFF;			star2.x = 0;			star2.y = 0;			star2.addEventListener(MouseEvent.ROLL_OVER , onStarOver );			star2.addEventListener(MouseEvent.ROLL_OUT , onStarOut );			star2.addEventListener(MouseEvent.CLICK , onStarClick );			star2.buttonMode = true;			_sign.addChild( star2 );						// Needed to avoid "No typography" error			// it forces the compiler to add the HelveticaMedium class, 			// which we don't want unless we'll actually use it.			// Notice that we actually don't assign it as type, 			// because HelveticaMedium is the default in Text3D 			var defaultType : HelveticaMedium; 						var hi : Text3D = new Text3D();			hi.size = 50;			hi.color = 0xCCCCCC;			hi.x = -30;			hi.y = -30;//			hi.z = -10;			hi.text = "Hi!";			star2.addChild( hi );		}						private function setupPlane() : void {			_plane = new RoundedRectangle3D( 50 , 50 , 5 );			_plane.color = 0x0000FF;			_plane.x = -850;			_plane.y = -350;			_plane.z = 500;			_scene.addChild( _plane );		}		private function onStarOver(event : MouseEvent) : void {			Sprite3D( event.currentTarget ).alpha = .5;		}		private function onStarClick(event : MouseEvent) : void {			Sprite3D( event.currentTarget ).scale = .5;		}		private function onStarOut(event : MouseEvent) : void {			Sprite3D( event.currentTarget ).alpha = 1;		}		private function move(event : Event) : void {			_sign.rotationY += 1;			_sign.rotationZ += 1;			_plane.x += 2;			_plane.lookAt( _sign );		}	}}